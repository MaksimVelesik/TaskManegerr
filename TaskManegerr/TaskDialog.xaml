<Window x:Class="TaskManager.TaskDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Задача" Height="300" Width="400">

    <Grid>
        <Label Content="Название:"/>
        <TextBox x:Name="titleTextBox" Margin="0,20,0,0"/>

        <Label Content="Описание:" Margin="0,50,0,0"/>
        <TextBox x:Name="descriptionTextBox" Margin="0,70,0,0"/>

        <Label Content="Приоритет:" Margin="0,100,0,0"/>
        <TextBox x:Name="priorityTextBox" Margin="0,120,0,0"/>

        <Label Content="Статус:" Margin="0,150,0,0"/>
        <TextBox x:Name="statusTextBox" Margin="0,170,0,0"/>

        <Button Content="Сохранить" Width="75" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="SaveButton_Click"/>
    </Grid>
</Window>